{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="cardstream-settings-form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        {% if (error_warning ) %}
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="cardstream-settings-form" class="form-horizontal">
                    <!-- cardstream module status on/off -->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="payment_cardstream_status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_cardstream_status" id="payment_cardstream_status" class="form-control">
                                {% if payment_cardstream_status %}
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>

                    <!-- cardstream integration type -->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="payment_cardstream_module_types">{{ entry_module_type }}</label>
                        <div class="col-sm-10">
                            <select name="payment_cardstream_module_type" id="payment_cardstream_module_type" class="form-control">
                                <option value="hosted"  {{ payment_cardstream_module_type == 'hosted' ? 'selected="selected"' : '' }} >{{ entry_module_hosted }}</option>
                                <option value="iframe"  {{ payment_cardstream_module_type == 'iframe' ? 'selected="selected"' : '' }}>{{ entry_module_iframe }}</option>
                                <!--	<option value="direct" {# echo $payment_cardstream_module_type == 'direct' ? 'selected="selected"' : ''; #}>{# echo $entry_module_direct; #}</option>-->
                            </select>
                        </div>
                    </div>


                    <!-- merchant id -->
                    <div class="form-group {% if ( error_merchantid  ) %} has-error has-feedback{% endif %}" >
                        <label class="col-sm-2 control-label" for="payment_cardstream_merchantid">{{ entry_merchantid }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_cardstream_merchantid" value="{{ payment_cardstream_merchantid }}" placeholder="{{ text_merchantid }}" id="payment_cardstream_merchantid" class="form-control" />
                            {% if ( error_merchantid  ) %}
                            <p class="help-block">{{ error_merchantid }}</p>
                            <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                            {% endif %}
                        </div>
                    </div>

                    <!-- merchant secret pass -->
                    <div class="form-group {% if ( error_merchantsecret  ) %} has-error has-feedback{% endif %}" >
                        <label class="col-sm-2 control-label" for="payment_cardstream_merchantsecret">{{ entry_merchantsecret }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_cardstream_merchantsecret" value="{{ payment_cardstream_merchantsecret }}" placeholder="{{ text_merchantsecret }}" id="payment_cardstream_merchantsecret" class="form-control" />
                            {% if ( error_merchantsecret ) %}
                            <p class="help-block">{{ error_merchantsecret }}</p>
                            <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Currency Code -->
                    <div class="form-group {% if ( error_currencycode  ) %} has-error has-feedback{% endif %}" >
                        <label class="col-sm-2 control-label" for="payment_cardstream_currencycode">{{ entry_currencycode }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_cardstream_currencycode" value="{{ payment_cardstream_currencycode }}" placeholder="{{ text_currencycode }}" id="payment_cardstream_currencycode" class="form-control" />
                            {% if ( error_currencycode  ) %}
                            <p class="help-block">{{ error_currencycode }}</p>
                            <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Country Code -->
                    <div class="form-group {% if ( error_countrycode  ) %} has-error has-feedback{% endif %}" >
                        <label class="col-sm-2 control-label" for="payment_cardstream_countrycode">{{ entry_countrycode }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_cardstream_countrycode" value="{{ payment_cardstream_countrycode }}" placeholder="{{ text_countrycode }}" id="payment_cardstream_countrycode" class="form-control" />
                            {% if ( error_countrycode  ) %}
                            <p class="help-block">{{ error_countrycode }}</p>
                            <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                            {% endif %}
                        </div>
                    </div>

                    <!-- cardstream geo zone -->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="payment_cardstream_geo_zone_id">{{ entry_geo_zone }}</label>
                        <div class="col-sm-10">
                            <select name="payment_cardstream_geo_zone_id" id="payment_cardstream_geo_zone_id" class="form-control">
                                <option value="0">{{ text_all_zones }}</option>
                                {% for geo_zone in geo_zones %}
                                {% if ( geo_zone['geo_zone_id'] == payment_cardstream_geo_zone_id ) %}
                                <option value="{{ geo_zone['geo_zone_id'] }}"
                                        selected="selected">{{ geo_zone['name'] }}</option>
                                {% else %}
                                <option
                                        value="{{ geo_zone['geo_zone_id'] }}">{{ geo_zone['name'] }}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                     <!-- cardstream form responsive -->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="payment_cardstream_form_responsive">{{ entry_form_responsive }}</label>
                        <div class="col-sm-10">
                            <select name="payment_cardstream_form_responsive" id="payment_cardstream_form_responsive" class="form-control">
                                <option value="Y">Yes</option>
                                <option value="N">No</option>
                            </select>
                        </div>
                    </div>




                    <!-- cardstream Order Status -->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_cardstream_order_status_id" id="input-order-status" class="form-control">
                                {% for order_status in order_statuses %}
                                {% if (order_status['order_status_id'] == payment_cardstream_order_status_id) %}
                                <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                                {% else %}
                                <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <!-- cardstream sort order -->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_cardstream_sort_order" value="{{ payment_cardstream_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>


</div>
{{ footer }}
